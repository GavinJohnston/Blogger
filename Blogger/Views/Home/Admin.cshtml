@{
    ViewData["Title"] = "Admin";
}
<head>
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
</head>

<div id="viewerModalBack" onclick="closeModals()">

</div>

<div id="viewerModal">
    <div id="modaltitles">
        <div id="modalContentTitle"></div>
        <div id="editMode">EDIT MODE</div>
    </div>
    <textarea id="modalContentArea"></textarea>
    <div id="modalContentEdit" onclick="editPost()">Edit Post</div>
    <div id="modalContentSave">Save Post</div>
</div>

<div id="content">
    <header id="header">
        <div id="header_main">
            <div id="header_main-header" class="header_text">Admin Panel</div>
            <a href="/" id="login_btn">Home</a>
        </div>
    </header>
    <div id="contentPanel">
        <div id="BlogInfo" class="panelSection">
            <h2 class="sectionHeader">Blog Information</h2>
            <form id="titlesForm" class="sectionContent" onsubmit="return false;" autocomplete="off">
                <div class="inputArea">
                    <h2 class="inputName">Main Header:</h2>
                    <input type="text" class="inputBox" placeholder="Header Name" id="headerName" name="headerName" />
                    <input type="submit" id="submitAllInfo" value="Submit All" class="submit" onclick="updateBlogTitle()" />
                </div>
                <div class="inputArea">
                    <h2 class="inputName">Sub Header:</h2>
                    <input type="text" class="inputBox" placeholder="Sub name" id="subHeaderName" name="subHeaderName" />
                </div>
                <div class="inputArea">
                    <h2 class="inputName">Text Colour:</h2>
                    
                        <input type="color" class="colorPicker" id="colorPickerMain" name="colorPickerMain">
                    
                </div>
            </form>
        </div>
        <div id="CategoriesManager" class="panelSection">
            <h2 class="sectionHeader">Manage Categories</h2>
            <div class="sectionContent">
                <div class="inputArea">
                    <h2 class="inputName">Add Category:</h2>
                    <div id="submitArea">
                        <input type="text" class="inputBox" placeholder="Category Name" id="addCat" />
                        <input type="color" id="colorPickerCat" class="colorPicker">
                    </div>
                    <div id="addCatSubmit" class="submit" onclick="createCategory()">Add</div>
                </div>
                <div class="inputArea">
                    <h2 class="inputName">Remove Category:</h2>
                    <select id="binCatList"
                            name="catList"
                            class="inputBox catLists"
                            placeholder="Categories"></select>
                    <div id="hideCatSubmit" class="submit" onclick="binCategory()">Bin</div>
                </div>
                <div class="inputArea">
                    <h2 class="inputName">Bin:</h2>
                    <select id="catListBinned"
                            name="catList"
                            class="inputBox"
                            placeholder="Categories"></select>
                    <div id="btnManager">
                        <div id="recoverCatSubmit" class="submit" onclick="recoverCategory()">Recover</div>
                        <div id="removeCatSubmit" class="submit" onclick="deleteCategory()">Delete</div>
                    </div>
                </div>
            </div>
        </div>
        <div id="CreatePost" class="panelSection">
            <h2 class="sectionHeader">Create Post</h2>
            <form class="sectionContent" id="postContent" onsubmit="return false;" autocomplete="off">
                <div class="postInfo">
                    <div class="inputAreaPost">
                        <h2 class="inputName">Post Title:</h2>
                        <input type="text" class="inputBox" name="postTitle" id="postTitle" placeholder="Post Title" />
                    </div>
                    <div class="inputAreaPost">
                        <h2 class="inputName">Select Category:</h2>
                        <select id="catList"
                                name="catList"
                                class="inputBox catLists"
                                placeholder="Categories"></select>
                        <button id="submitPost" class="submit" onclick="generatePost()">Submit Post</button>
                    </div>
                </div>
                <div id="postBox">
                    <div id="formatter">
                        <h3>Format text:</h3>
                        <h4 id="formatHeader" class="formatBtn">Header</h4>
                        <h4 id="formatBold" class="formatBtn">Bold</h4>
                        <h4 id="formatItalic" class="formatBtn">Italic</h4>
                    </div>
                    <textarea id="createPost"
                              placeholder="Share Your Thoughts.."
                              name="postContent">
                    </textarea>
                </div>
            </form>
        </div>
        <div id="CategoriesManager" class="panelSection">
            <h2 class="sectionHeader">Manage Posts</h2>
        </div>
        <div class="sectionContent" id="managePostContent">
            <div class="postInfo">
                <h2 class="inputName">Select Category:</h2>
                <select id="catListPosts"
                        name="catList"
                        class="inputBox"
                        placeholder="Categories"
                        onchange="viewPosts()">
                    <option value="All">All</option>
                </select>
            </div>
            <div id="listPosts">
                <h2 class="inputName">Posts:</h2>
                <div id="postContainer"></div>
            </div>
        </div>
    </div>
</div>

